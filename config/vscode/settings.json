{
    // Theme
    "workbench.colorTheme": "Catppuccin Mocha",
    "catppuccin.accentColor": "pink",
    "catppuccin.boldKeywords": true,
    "catppuccin.italicComments": true,
    "catppuccin.italicKeywords": true,
    "catppuccin.syncWithIconPack": true,
    "catppuccin.customUIColors": {
        "all": {
            "editorCursor.foreground": "accent",
            "editorInlayHint.background": "base",
            "editorInlayHint.parameterBackground": "base",
            "editorInlayHint.typeBackground": "base",
            "editorInlayHint.typeForeground": "subtext0",
            "statusBarItem.remoteBackground":"accent"
        }
    },
    "bookmarks.gutterIconBorderColor": "#89b4fa", // blue
    "bookmarks.gutterIconFillColor": "#89b4fa", // blue
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#f38ba8", // red
            "italic": true
        },
        {
            "tag": "?",
            "color": "#89b4fa", // blue
            "italic": true
        },
        {
            "tag": "todo",
            "color": "#fab387", // peach
            "italic": true
        },
        {
            "tag": "*",
            "color": "#a6e3a1", // green
            "italic": true
        }
    ],

    // Icons
    "workbench.iconTheme": "catppuccin-mocha",

    // Cursor
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",

    // Font
    "editor.fontFamily": "'FiraCode Nerd Font Ret', 'FiraCode Nerd Font', 'Fira Code', 'Droid Sans Mono', 'monospace'",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,

    // Terminal
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.fontSize": 12,

    // MenuBar
    "window.menuBarVisibility": "toggle",

    // SecondarySideBar
    "workbench.secondarySideBar.showLabels": false,

    // Whitespaces
    "files.trimTrailingWhitespace": true,

    // Debug
    "debug.allowBreakpointsEverywhere": true,

    // Diff mode
    "diffEditor.ignoreTrimWhitespace": true,

    // GitLens
    "gitlens.launchpad.indicator.enabled": false,
    "gitlens.graph.statusBar.enabled": false,

    // Python
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.callArgumentNames": "partial",

    // C++
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    "C_Cpp.inlayHints.parameterNames.hideLeadingUnderscores": true,
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.parameterNames.suppressWhenArgumentContainsName": true,

    // Copilot
    "chat.commandCenter.enabled": false,
    "chat.experimental.statusIndicator.enabled": false
}
